#!/bin/bash
# GitPeek Commit Message Hook
# ã‚³ãƒŸãƒƒãƒˆãƒ¡ãƒƒã‚»ãƒ¼ã‚¸å½¢å¼ã‚’æ¤œè¨¼

commit_regex='^(feat|fix|docs|style|refactor|perf|test|build|ci|chore)(\(.+\))?: .{1,72}$'
merge_regex='^Merge '

# Get the commit message
commit_message=$(cat "$1")

# Allow merge commits
if echo "$commit_message" | grep -qE "$merge_regex"; then
    exit 0
fi

# Check commit message format
if ! echo "$commit_message" | grep -qE "$commit_regex"; then
    echo "âŒ Invalid commit message format!"
    echo ""
    echo "ğŸ“ Format: <type>(<scope>): <subject>"
    echo ""
    echo "Types:"
    echo "  feat:     æ–°æ©Ÿèƒ½"
    echo "  fix:      ãƒã‚°ä¿®æ­£"
    echo "  docs:     ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆ"
    echo "  style:    ã‚³ãƒ¼ãƒ‰ã‚¹ã‚¿ã‚¤ãƒ«ï¼ˆå‹•ä½œã«å½±éŸ¿ã—ãªã„ï¼‰"
    echo "  refactor: ãƒªãƒ•ã‚¡ã‚¯ã‚¿ãƒªãƒ³ã‚°"
    echo "  perf:     ãƒ‘ãƒ•ã‚©ãƒ¼ãƒãƒ³ã‚¹æ”¹å–„"
    echo "  test:     ãƒ†ã‚¹ãƒˆè¿½åŠ ãƒ»ä¿®æ­£"
    echo "  build:    ãƒ“ãƒ«ãƒ‰ã‚·ã‚¹ãƒ†ãƒ "
    echo "  ci:       CI/CD"
    echo "  chore:    ãã®ä»–"
    echo ""
    echo "Examples:"
    echo "  feat: add repository search functionality"
    echo "  fix(git): resolve crash when repository path is invalid"
    echo "  test: add unit tests for GitManager"
    echo ""
    echo "Your message: $commit_message"
    exit 1
fi

echo "âœ… Commit message format is valid"